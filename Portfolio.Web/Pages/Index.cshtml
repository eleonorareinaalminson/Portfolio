@section Scripts {
    <script>
        // Typewriter-effekt med senapsgul accent på sista ordet
        var TxtType = function(el, toRotate, period) {
            this.toRotate = toRotate;
            this.el = el;
            this.loopNum = 0;
            this.period = parseInt(period, 10) || 2000;
            this.txt = '';
            this.tick();
            this.isDeleting = false;
        };

        TxtType.prototype.tick = function() {
            var i = this.loopNum % this.toRotate.length;
            var fullTxt = this.toRotate[i];

            if (this.isDeleting) {
                this.txt = fullTxt.substring(0, this.txt.length - 1);
            } else {
                this.txt = fullTxt.substring(0, this.txt.length + 1);
            }

            // Alla ord som skrivs ut ska vara i senapsgul färg
            var displayTxt = this.txt;
            if (displayTxt.length > 0) {
                displayTxt = '<span class="typewrite-accent">' + displayTxt + '</span>';
                this.el.classList.add('accent-active');
            } else {
                this.el.classList.remove('accent-active');
            }

            this.el.innerHTML = '<span class="wrap">' + displayTxt + '</span>';

            var that = this;
            var delta = 200 - Math.random() * 100;

            if (this.isDeleting) { delta /= 2; }

            if (!this.isDeleting && this.txt === fullTxt) {
                delta = this.period;
                this.isDeleting = true;
            } else if (this.isDeleting && this.txt === '') {
                this.isDeleting = false;
                this.loopNum++;
                delta = 500;
                this.el.classList.remove('accent-active');
            }

            setTimeout(function() {
                that.tick();
            }, delta);
        };

        // ALLT INNE I DOMContentLoaded!
        document.addEventListener('DOMContentLoaded', function() {
            // Initiera typewriter
            var elements = document.getElementsByClassName('typewrite');
            for (var i=0; i<elements.length; i++) {
                var toRotate = elements[i].getAttribute('data-type');
                var period = elements[i].getAttribute('data-period');
                if (toRotate) {
                  new TxtType(elements[i], JSON.parse(toRotate), period);
                }
            }

            // Tech Stack tabs functionality
            const tabs = document.querySelectorAll('.tech-tab');
            const cards = document.querySelectorAll('.tech-card');

            function showCategory(category) {
                cards.forEach(card => {
                    if (card.dataset.category === category) {
                        card.style.display = 'block';
                        card.style.animation = 'fadeInUp 0.5s ease-in-out';
                    } else {
                        card.style.display = 'none';
                    }
                });
            }

            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const category = this.dataset.category;

                    // Update active tab
                    tabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');

                    // Show category
                    showCategory(category);
                });
            });

            // Initialize with backend tab
            showCategory('backend');

            // Instagram accent
